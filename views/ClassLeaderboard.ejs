<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title><%- region %> <%- leaderboardType %> <%- title %></title>
	<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.3.11/d3.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/d3-tip/0.6.3/d3-tip.min.js"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/bootstrap/3.3.0/css/bootstrap.min.css">	
	<link rel="stylesheet" type="text/css" href="../../../styles/leaderboard.css">

	<script>
		var allData = <%-JSON.stringify(all)%>;
		var gRift = <%- JSON.stringify(ejs_battletags) %>;



		//GRift Median
		//Elemental DPS
		//CDR
		//Toughness
		//Life
		//CC CHD cc:chd ratio

		var allStats = allData.reduce(function (prev, currentValue) {
						 	var newVar = {};
						 	for (key in currentValue.stats) {
						 		newVar[key] = (prev[key] || 0) + currentValue.stats[key]; 
						 	}
						 	var elemDam = currentValue.extraItemData.elementalDam[0][1];
						 	elemDam = 1 + (elemDam/100);

						 	var eliteDam = currentValue.extraItemData.eliteDam;
						 	eliteDam = 1 + (eliteDam/100);

						 	newVar.elemDam = (prev.elemDam || 0) + 
						 	(elemDam * currentValue.stats.damage);

						 	newVar.eliteElemDam = (prev.eliteElemDam || 0) + 
						 	(elemDam * eliteDam * currentValue.stats.damage);

						 	newVar.cooldown = (prev.cooldown || 0) + parseFloat(currentValue.extraItemData.cooldown);
						 	newVar.paragon = (prev.paragon || 0) + parseFloat(currentValue.Paragon);
							return newVar;
						},0);

		var allRes = 0;
		for (key in allStats) {
			if (key.indexOf("Resist") != -1) {
				allRes += allStats[key];
				console.log(allStats[key],allRes, key)
			}
			allStats[key] /= allData.length;
			if (key === "arcaneResist") {
				allStats.allRes = allRes / (6*allData.length);
			}
		}

		// var avgGrift = gRift.reduce(function (prev, currentValue) {
		// 					return prev + parseFloat(currentValue["Greater Rift"]);
		// 				},0) / allData.length;
		
		var medianGrift =  parseInt(gRift[gRift.length/2]["Greater Rift"]) + parseInt(gRift[(gRift.length/2) - 1]["Greater Rift"])
		medianGrift /= 2;

		var statHTML = "";

		statHTML += "Elemental Damage: " + Number(allStats.elemDam.toFixed(0)).toLocaleString('en') + "<br/>";
		statHTML += "Elite Elemental Damage: " + Number(allStats.eliteElemDam.toFixed(0)).toLocaleString('en') + "</br/>";
		statHTML += "Toughness: " + allStats.toughness.toFixed(0) + "<br />";
		statHTML += "Life: " + allStats.life.toFixed(0) + "<br />";
		statHTML += "All Resist: " + allStats.allRes.toFixed(0) + "<br />"
		statHTML += "Average Cooldown Reduction: " + allStats.cooldown.toFixed(2) + "%<br />";
		statHTML += "Average Paragon: " + allStats.paragon.toFixed(0) +"<br />";
		statHTML += "Median GRift Level: " + medianGrift + "<br />";
		statHTML += "Crit Chance: " + (allStats.critChance * 100).toFixed(0) + "%<br />";
		statHTML += "Crit Dam: " + (allStats.critDamage * 100).toFixed(0) + "%<br />";
		statHTML += "CD/CC: " + (allStats.critDamage / allStats.critChance).toFixed(2) + "<br />";




		$(document).ready(function () {
			$('#top').hide();
			$('#skillPicker').hide();
			$('#statistics').html(statHTML);

		})

		$(window).scroll(function() {
			if ($(window).scrollTop() > 400) {
	        // > 100px from top - show div
	        	$('#top').show();
			}

		    else {
		        // <= 100px from top - hide div
		        $('#top').hide();
		    }
		});
	</script>

