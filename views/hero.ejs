<h1>These are <%= ejs_btag %>s <%= ejs_heroData.name %> </h1>
<script src="http://localhost:3000/get.js"> </script>


//Shows information for a Hero
<div>
	<ul>

		<li>Name : <%= ejs_heroData.name %></li>
		<li>Class : <%= ejs_heroData.class %></li>
		<li>Level : <%= ejs_heroData.level %></li>
		<li>Active Skills :
			<!-- loop through the active skills -->
			<ul><% ejs_heroData.skills.active.forEach(function (activeSkills) { %>
				<!-- if skill is not null, add it to list -->
				<% if (activeSkills.skill != undefined) { %><li><%= activeSkills.skill.name %>
					<!-- if there is a rune add it to skill -->
					<% if (activeSkills.rune != undefined) { %> : <%= activeSkills.rune.name %><% } %>
				</li><% } %> 
			<% }) %></ul><!-- end of active skills loop -->

		<li>Passives :
			<ul><% ejs_heroData.skills.passive.forEach(function (passives) { %>
				<% if (passives.skill != undefined) { %> <li> <%= passives.skill.name %> </li> <% } %>
			<% }) %></ul>
		</li>

		<li> Items : 
			<ul>
				<% if (ejs_heroData.items.head != undefined) { %>
				<li title="Insert data from tooltip params">Head : <%= ejs_heroData.items.head.name %></li>
<!--				<ul>
					<li>  -->
				<% } %>
				<% if (ejs_heroData.items.head != undefined) { %>
				<li title="Insert data from tooltip params">Head : <%= ejs_heroData.items.head.name %></li>
				<% } %>
				<% if (ejs_heroData.items.torso != undefined) { %>
				<li title="Insert data from tooltip params">Torso : <%= ejs_heroData.items.torso.name %></li>
				<% } %>

				<% if (ejs_heroData.items.neck != undefined) { %>
				<li title="Insert data from tooltip params">Amulet : <%= ejs_heroData.items.bracers.neck %></li>
				<% } %>		
				<% if (ejs_heroData.items.shoulders != undefined) { %>
				<li title="Insert data from tooltip params">Shoulders : <%= ejs_heroData.items.shoulders.name %></li>
				<% } %>
				<% if (ejs_heroData.items.hands != undefined) { %>
				<li title="Insert data from tooltip params">Hands : <%= ejs_heroData.items.hands.name %></li>
				<% } %>

				<% if (ejs_heroData.items.bracers != undefined) { %>
				<li title="Insert data from tooltip params">Bracers : <%= ejs_heroData.items.bracers.name %></li>
				<% } %>		
				<% if (ejs_heroData.items.waist != undefined) { %>
				<li title="Insert data from tooltip params">Belt : <%= ejs_heroData.items.waist.name %></li>
				<% } %>						
				<% if (ejs_heroData.items.rightFinger != undefined) { %>
				<li title="Insert data from tooltip params">Right Finger : <%= ejs_heroData.items.rightFinger.name %></li>
				<% } %>
				<% if (ejs_heroData.items.leftFinger != undefined) { %>
				<li title="Insert data from tooltip params">Left Finger : <%= ejs_heroData.items.leftFinger.name %></li>
				<% } %>			
				<% if (ejs_heroData.items.legs != undefined) { %>
				<li title="Insert data from tooltip params">Legs : <%= ejs_heroData.items.legs.name %></li>
				<% } %>
				<% if (ejs_heroData.items.feet != undefined) { %>
				<li title="Insert data from tooltip params">Feet : <%= ejs_heroData.items.feet.name %></li>
				<% } %>				
				<% if (ejs_heroData.items.mainHand != undefined) { %>
				<li title="Insert data from tooltip params">Main Hand : <%= ejs_heroData.items.mainHand.name %></li>
				<% } %>		
				<% if (ejs_heroData.items.offHand != undefined) { %>
				<li title="Insert data from tooltip params">Off Hand : <%= ejs_heroData.items.offHand.name %></li>
				<% } %>		

			</ul>
		</li>
	</ul>
</div>
