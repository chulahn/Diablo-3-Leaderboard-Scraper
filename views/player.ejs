<h1><%= ejs_btag %></h1>

<!-- Shows all the heroes for a Battletag -->
<ul>
<% ejs_heroes.forEach(function (hero) { %>
	<li><a class = <%= hero.class %> href = "/player/<%= ejs_btag %>/hero/<%= hero.id %>"> <%= hero.name %> <%= hero.level %> </a> -----  <a href = "http://us.battle.net/d3/en/profile/<%= ejs_btag %>/hero/<%= hero.id %>" > Battle.net Profile</a>
